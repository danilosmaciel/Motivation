<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".files.ui.MainActivity"
    >

    <LinearLayout
        android:id="@+id/mainLnFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:background="@color/colorPrimary"
        >
        <ImageView
            android:id="@+id/mainImvAll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:src="@drawable/ic_all"
            app:tint="@color/white" />
        <ImageView
            android:id="@+id/mainImvHappy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:src="@drawable/ic_happy"
            app:tint="@color/white" />
        <ImageView
            android:id="@+id/mainImvMorning"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:src="@drawable/ic_sun"
            app:tint="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/mainTtvTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_below="@+id/mainLnFilters"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/mainTtvPhrases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/mainBtnNewPhrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nova Frase!"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>